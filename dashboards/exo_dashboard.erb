<script type='text/javascript'>
    $(function() {
        Dashing.gridsterLayout('[{"col":1,"row":1,"size_x":2,"size_y":1},{"col":3,"row":1,"size_x":1,"size_y":1},{"col":4,"row":1,"size_x":1,"size_y":1},{"col":3,"row":2,"size_x":1,"size_y":1},{"col":1,"row":2,"size_x":2,"size_y":1},{"col":4,"row":2,"size_x":1,"size_y":1},{"col":3,"row":3,"size_x":1,"size_y":1},{"col":1,"row":3,"size_x":1,"size_y":1},{"col":2,"row":3,"size_x":1,"size_y":1},{"col":4,"row":3,"size_x":1,"size_y":2},{"col":1,"row":4,"size_x":1,"size_y":1},{"col":2,"row":4,"size_x":2,"size_y":1}]')
    });
</script>

<% content_for :title do %>1080p dashboard<% end %>

<div class="gridster">
  <ul>
    <li data-switcher-interval="3000" data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="welcome" data-view="Text" data-title="Hello" data-text="Yay!!!. Hackathon" data-moreinfo="Protip: You can drag the widgets around!"></div>
      <div data-id="props" data-view="Text" data-title="Props" data-text="To the team"></div>
      <div data-id="all_users" data-view="Number" data-title="All Users" style="background-color:#96bf48;"></div>
    </li>


    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="sales_total" data-view="Meter" data-title="2016 Yearly Revenue" data-min="0" data-max="100"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="todo_list" data-view="List" data-unordered="true" data-title="Tech Todo List"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="total_atl_bookings" data-view="Meter" data-title="2016 Q4 ATL Bookings" data-min="0" data-max="100"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="barchart" data-view ="BarChart" data-moreinfo="Sales Projection"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="piechart" data-view ="PieChart"  data-moreinfo="Tech Board" data-left-margin="5" data-top-margin="10"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="enrolled_students" data-view="Number" data-title="Enrolled Students" style="background-color:#96bf48;"></div>
      <i class="fa fa-heart icon-background"></i>
    </li>

    <li data-row="2" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="doughnutchart" data-view ="DoughnutChart" data-moreinfo="Overall Experience"></div>
    </li>

    <li data-row="2" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="doughnutchart2" data-view ="DoughnutChart" data-moreinfo="Likely to recommend"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div data-id="student_breakdown" data-view="List" data-unordered="true" data-title="Current Users"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="awesome" data-view="Text" data-title="Awesome" data-text="Totally put something awesome here"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="convergence" data-view="Graph" data-title="Internet Bandwidth" style="background-color:#ff9618"></div>
    </li>
  </ul>
</div>
